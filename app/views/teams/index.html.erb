<h1>Listing teams</h1>
<%= link_to 'New team', :action => 'new', :sport_id => params[:sport_id] %>

<table>
  <tr>
	<th>Name</th>
	<th>Sport</th>
  </tr>

<% for team in @teams %>
  <tr>
	<td><%= team.name %></td>
	<td><%= team.sport.name %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

